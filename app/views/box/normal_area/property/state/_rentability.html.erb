<%= link_to property_path(property.id) do %>
	<div class="box rounded normal_area list_item property selectable">
		<div class="upper">
			<%= image_tag "property/#{property.name}.jpg", width: 240, height: 180 %>
		</div>

		<div class="middle">				
			<h3><%= property.title %></h3>
			<ul class="display">
				<li>55 m2 apartment on 4th floor</li>
				<li>2/1 Furnished rooms</li>
				<li>Valby, Copenhagen, DK</li>
				<li>12/5/2012 - 12/5/2013</li>
			</ul>
		</div>

		<div class="lower">
			<div>
				<h4 class="cost"><%= property.cost %> <%= property.currency %></h4>
				<ul class="actions">
					<li class="lower icon-envelope-alt action mail <%= property.mail.status %>"></li>
					<li class="lower icon-heart favorite <%= property.favorite.status %>"></li>
					<li class="lower icon-globe action map"></li>
				</ul>
			</div>
		</div>
	</div>
<% end %>